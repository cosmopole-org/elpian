{
  "ui": [
    {
      "type": "container",
      "id": "root",
      "style": {
        "width": "100%",
        "height": "100%",
        "flex_direction": "Column",
        "justify_content": "FlexStart",
        "align_items": "FlexStart",
        "padding": { "top": 20, "bottom": 20, "left": 20, "right": 20 }
      },
      "children": [
        {
          "type": "appbar",
          "title": "Material + 3D Demo",
          "background_color": { "r": 0.08, "g": 0.12, "b": 0.18, "a": 1.0 }
        },
        {
          "type": "container",
          "style": { "flex_direction": "Row", "margin": { "top": 10, "bottom": 10, "left": 0, "right": 0 } },
          "children": [
            { "type": "iconbutton", "icon": "menu", "action": "toggle_drawer" },
            { "type": "divider", "thickness": 2 },
            { "type": "chip", "label": "Example Chip", "selected": true }
          ]
        },
        {
          "type": "container",
          "style": { "width": 400, "padding": { "top": 10, "bottom": 10, "left": 10, "right": 10 } },
          "children": [
            {
              "type": "list",
              "items": [
                { "type": "text", "text": "List item 1" },
                { "type": "text", "text": "List item 2" },
                { "type": "text", "text": "List item 3" }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "drawer",
      "open": false,
      "width": 260,
      "content": [
        { "type": "text", "text": "Drawer Item A" },
        { "type": "text", "text": "Drawer Item B" }
      ]
    }
  ],
  "world": [
    { "type": "camera", "camera_type": "Perspective", "transform": { "position": { "x": 0.0, "y": 3.0, "z": 8.0 } } }
  ]
}
